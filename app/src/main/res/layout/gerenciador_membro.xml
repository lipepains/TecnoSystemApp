<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Membro"
                android:id="@+id/textView0"
                android:textSize="25dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtNomeMembro" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:id="@+id/textView1"
                android:textSize="25dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtUsuarioMembro" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Senha"
                android:id="@+id/textView10"
                android:textSize="25dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtSenhaMembro"
                android:password="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/textView3"
                android:textSize="25dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtEmailMembro"
                android:inputType="textEmailAddress" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data de ingresso"
                    android:id="@+id/textView4"
                    android:textSize="25dp"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/dataChegada"
                    android:text="Selecione Data"
                    android:onClick="selecionarData"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargo"
                    android:id="@+id/textView5"
                    android:textSize="25dp"
                    android:layout_weight="1" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/spnCargo"
                    android:layout_weight="1"
                    android:prompt="@string/cargos"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Especialidade"
                android:id="@+id/textView6"
                android:textSize="25dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtEspecialidadeMembro" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição"
                android:id="@+id/textView7"
                android:textSize="25dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtDescricaoMembro" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Projetos Realizados"
                android:id="@+id/textView8"
                android:textSize="25dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtProjetoRealizadoMembro" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adicionar membro"
                android:id="@+id/btnAdicionar"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:onClick="btnAdicionarMembro" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deletar Membro"
                android:id="@+id/btnDeletar"
                android:clickable="true"
                android:onClick="btnDeletar" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Membro"
                android:id="@+id/btnEditar"
                android:clickable="true"
                android:onClick="btnEditarMembro" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buscar Membro"
                android:id="@+id/btnBuscar"
                android:clickable="true"
                android:onClick="btnBuscar" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buscar todos os Membros"
                android:id="@+id/btnBuscarTodos"
                android:clickable="true"
                android:onClick="btnBuscarTudo" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Limpar caixas"
                android:id="@+id/btnLimpar"
                android:clickable="true"
                android:onClick="limparCaixas" />

        </LinearLayout>
        </ScrollView>
    </LinearLayout>