<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"

    android:gravity="center_vertical|center_horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2"
            android:gravity="center"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/linearLayout">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView

                            android:layout_width="150dp"
                            android:layout_height="168dp"
                            android:id="@+id/imageView"
                            android:src="@drawable/logots" />

                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gerenciador"
                            android:layout_centerHorizontal="true"
                            android:textColor="#fff"
                            android:layout_below="@id/imageView"
                            android:textSize="28dp"
                            android:id="@+id/textView9"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/imagebtnagenda"
                            android:background="@drawable/agenda"
                            android:onClick="btnGerenciador_agenda"
                            android:clickable="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Agenda"
                            android:id="@+id/labelagenda"
                            android:textColor="#ffffffff"
                            android:layout_below="@+id/imagebtnagenda"
                            android:layout_centerHorizontal="true"
                            android:clickable="true"
                            android:onClick="btnAgenda" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        >

                        <ImageButton
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/imagebtnprojetos"
                            android:background="@drawable/projetos"
                            android:onClick="btnGerenciador_projetos"
                            android:clickable="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Projetos"
                            android:id="@+id/labelprojetos"
                            android:textColor="#ffffffff"
                            android:layout_below="@+id/imagebtnprojetos"
                            android:layout_centerHorizontal="true"
                            />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/imagebtnmembros"
                            android:background="@drawable/membros"
                            android:onClick="btnGerenciador_membros"
                            android:clickable="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Membros"
                            android:id="@+id/labelmembros"
                            android:textColor="#ffffffff"
                            android:layout_below="@+id/imagebtnmembros"
                            android:layout_centerHorizontal="true"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </FrameLayout>
</RelativeLayout>
